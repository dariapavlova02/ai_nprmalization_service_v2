# Production environment with search enabled
# Copy this to env.production to enable search

# === EXISTING PRODUCTION SETTINGS ===
PRESERVE_FEMININE_SURNAMES=true
ENABLE_ENHANCED_GENDER_RULES=true
PRESERVE_FEMININE_SUFFIX_UK=true
ENABLE_FSM_TUNED_ROLES=true
MORPHOLOGY_CUSTOM_RULES_FIRST=true
ENABLE_ADVANCED_FEATURES=true
NORMALIZATION_ENABLE_ADVANCED_FEATURES=true
NORMALIZATION_ENABLE_MORPHOLOGY=true
ENFORCE_NOMINATIVE=false
DEBUG_TRACING=false

# === SEARCH CONFIGURATION ===
# Main search toggle
ENABLE_SEARCH=true

# Elasticsearch connection
ES_HOSTS=localhost:9200
ES_USERNAME=
ES_PASSWORD=
ES_API_KEY=
ES_VERIFY_CERTS=false
ES_TIMEOUT=30

# Search features
ENABLE_HYBRID_SEARCH=true
ENABLE_ESCALATION=true
ESCALATION_THRESHOLD=0.8
ENABLE_FALLBACK=true
FALLBACK_THRESHOLD=0.3

# Vector search settings
VECTOR_DIMENSION=384
VECTOR_SIMILARITY_THRESHOLD=0.7

# Performance settings
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT_MS=5000

# Cache settings
ENABLE_EMBEDDING_CACHE=true
EMBEDDING_CACHE_SIZE=1000
EMBEDDING_CACHE_TTL_SECONDS=3600

# Service flags
ENABLE_SMART_FILTER=true
ENABLE_VARIANTS=true
ENABLE_EMBEDDINGS=true
ENABLE_DECISION_ENGINE=true
ENABLE_METRICS=true
ALLOW_SMART_FILTER_SKIP=false